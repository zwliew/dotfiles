[core]
	editor = nvim
	pager = delta

[diff]
	tool = lvimdiff
	colorMoved = default

[difftool "lvimdiff"]
	cmd = "lvim -d \"$LOCAL\" \"$REMOTE\""

[commit]
	gpgSign = true

[interactive]
	diffFilter = delta --color-only

[delta]
	# use n and N to move between diff sections
	navigate = true
	line-numbers = true

[merge]
	conflictStyle = zdiff3

[github]
	user = zwliew
[init]
	defaultBranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
