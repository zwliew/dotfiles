[user]
	name = Zhao Wei Liew
	email = zhaoweiliew@gmail.com

[core]
	editor = nvim
	pager = git delta

[diff]
	tool = nvimdiff
	colorMoved = default

[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[interactive]
  diffFilter = git delta --color-only

[delta]
	# use n and N to move between diff sections
	navigate = true
	line-numbers = true

[alias]
	delta = !delta $(defaults read -g AppleInterfaceStyle &>/dev/null || echo --light)

[merge]
	conflictStyle = zdiff3

[github]
	user = zwliew

[init]
	defaultBranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[alias]
	co = "checkout"
	br = "branch"
	ci = "commit"
	st = "status"
	df = "diff"
	bs = "bisect"
	cl = "clone"
	ll = "log --oneline --graph"
